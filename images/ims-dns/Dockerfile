FROM ubuntu:focal

ENV DEBIAN_FRONTEND=noninteractive

# Install updates and dependencies
RUN apt-get update && \
	apt-get -y install tcpdump dnsutils screen tmux ntp ntpdate iproute2 net-tools \
					iputils-ping bind9

COPY resources/ /mnt/dns/

RUN chmod +x /mnt/dns/dns_init.sh

ENV IMS_DOMAIN=ims.mnc001.mcc001.3gppnetwork.org \
    EPC_DOMAIN=openverso \
    MNC=01 \
    MCC=001 \
    DNS_HOSTNAME=dns \
    PCRF_HOSTNAME=pcrf \
    ICSCF_HOSTNAME=icscf \
    SCSCF_HOSTNAME=scscf \
    PCSCF_HOSTNAME=pcscf \
    FHOSS_HOSTNAME=fhoss \
    SMSC_HOSTNAME=smsc

CMD /mnt/dns/dns_init.sh && \
	/usr/sbin/named -c /etc/bind/named.conf -g -u bind
